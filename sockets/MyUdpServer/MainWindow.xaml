<Window x:Class="MyUdpServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <Label Content="Messages" HorizontalAlignment="Left" Margin="238,44,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="receivedMessage" HorizontalAlignment="Left" Height="194" Margin="64,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="397" Text="{Binding receivedMessage}" IsEnabled="False" />
    </Grid>
</Window>
