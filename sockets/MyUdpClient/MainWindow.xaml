<Window x:Class="MyUdpClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Message" HorizontalAlignment="Left" Margin="39,40,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="messageInput" HorizontalAlignment="Left" Height="188" Margin="39,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210" Text="{Binding messageInput}"/>
        <TextBox x:Name="messageStatus" HorizontalAlignment="Left" Height="188" Margin="291,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="196" Text="{Binding messageStatus}"/>
        <Label Content="Status" HorizontalAlignment="Left" Margin="291,40,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.415,-0.242"/>
        <Button x:Name="sendButton" Content="Send" HorizontalAlignment="Left" Margin="39,279,0,0" VerticalAlignment="Top" Width="75" Click="sendButton_Click" />

    </Grid>
</Window>
