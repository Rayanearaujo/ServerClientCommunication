<Window x:Class="UdpServerProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Servidor" Height="350" Width="525" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid Background ="LightSlateGray">
        <Label Content="Mensagem recebida" HorizontalAlignment="Left" Margin="64,49,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtMessages" HorizontalAlignment="Left" Height="194" Margin="64,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="397" Text="{Binding myMessage}" IsEnabled="False" />
    </Grid>
</Window>
