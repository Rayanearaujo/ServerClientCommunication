<Window x:Class="UdpClientProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client Window" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Message" HorizontalAlignment="Left" Margin="39,40,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtMyMessage" HorizontalAlignment="Left" Height="23" Margin="39,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="372" Text="{Binding myMessage}"/>
        <TextBox x:Name="txtStatusMessage" HorizontalAlignment="Left" Height="127" Margin="39,157,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="372" Text="{Binding myStatusMessage}"/>
        <Label Content="Status" HorizontalAlignment="Left" Margin="39,126,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.415,-0.242"/>
        <Button x:Name="btnSend" Content="Send" HorizontalAlignment="Left" Margin="336,94,0,0" VerticalAlignment="Top" Width="75" Click="btnSend_Click"/>


    </Grid>
</Window>
